{
    "name": "nlngh/nckh-system",
    "description": "Hệ thống Quản lý Nghiên cứu Khoa học",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Admin NCKH",
            "email": "admin@nckh.ctu.edu.vn"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

