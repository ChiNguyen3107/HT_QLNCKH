{
    "name": "nlngh/nckh-system",
    "description": "Hệ thống Quản lý Nghiên cứu Khoa học",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Admin NCKH",
            "email": "admin@nckh.ctu.edu.vn"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "guzzlehttp/guzzle": "^7.8",
        "fakerphp/faker": "^1.23",
        "phpunit/php-code-coverage": "^10.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit",
        "test:feature": "phpunit tests/Feature",
        "test:coverage": "phpunit --coverage-html storage/coverage --coverage-clover storage/coverage/clover.xml",
        "test:coverage-text": "phpunit --coverage-text",
        "test:ci": "phpunit --coverage-clover storage/coverage/clover.xml",
        "serve": "php -S localhost:8000 -t public",
        "test:setup": [
            "mkdir -p storage/coverage",
            "mkdir -p storage/logs",
            "mkdir -p storage/cache",
            "mkdir -p storage/sessions"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

